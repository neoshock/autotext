<?xml version="1.0" encoding="utf-8" ?>
<macrosesConfiguration xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

	<macrosNameSuffixStr ><![CDATA[:]]></macrosNameSuffixStr>
	<macrosParameterPrefix ><![CDATA[-]]></macrosParameterPrefix>
	<macrosParameterAssignmentStr ><![CDATA[=]]></macrosParameterAssignmentStr>
	<macrosNameRegex ><![CDATA[=]]></macrosNameRegex>

	<macrosDefinitions>

		<macros name="PrintString" shortName="s" >
			<description>Outputs a string</description>
			
			<explicitParamsRegex><![CDATA[^s: *-text=("{1})(?<text>.+)(\1) *-count=(?<count>[1-9][0-9]*) *$]]></explicitParamsRegex>
			<implicitParamsRegex><![CDATA[^s:(?<text>.+) {1}(?<count>[1-9][0-9]*) *$]]></implicitParamsRegex>
			<!--^(k:)? *(?<keycode>PageUp|Down) +(?<action>[-+]|[1-9][0-9]*|on|off|t|toggle) *$-->
			<parameters>

				<parameter name="text" allowOmitName="true">
					<allowedDataTypes>
						<dataType name="string" />
					</allowedDataTypes>
				</parameter>

				<parameter name="count"  allowOmitName="true">
					<allowedDataTypes>
						<dataType name="int" />
					</allowedDataTypes>
				</parameter>

			</parameters>

		</macros>

	</macrosDefinitions>

</macrosesConfiguration>