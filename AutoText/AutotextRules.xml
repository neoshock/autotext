<?xml version="1.0" encoding="utf-8" ?>
<autotextRules xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
	<rules>
		
		<rule name="Test 1">
			<abbreviation caseSensitive="false" type="Text">
				<value><![CDATA[tt]]></value>
			</abbreviation>
			<removeAbbr>true</removeAbbr>
			<phrase><![CDATA[{s:Hello 3}]]></phrase>
			<description><![CDATA[Some description 1]]></description>
			<triggers>
				<item caseSensitive="false">
					<value><![CDATA[{Space}]]></value>
				</item>
				<item caseSensitive="false">
					<value><![CDATA[{ShiftKey}]]></value>
				</item>
			</triggers>
		</rule>


		<rule name="Test with regex abbreviation">
			<abbreviation caseSensitive="false" type="Regex" lastCharsCount="50">
				<value><![CDATA[cd:(?<format>[^ ]+?)go$]]></value>
			</abbreviation>
			<phrase><![CDATA[Current date formatted: {d:{v:format}}]]></phrase>
			<description><![CDATA[Some description]]></description>
			<triggers>
				<item caseSensitive="false">
					<value><![CDATA[{Space}]]></value>
				</item>
			</triggers>
		</rule>

	</rules>
</autotextRules>
