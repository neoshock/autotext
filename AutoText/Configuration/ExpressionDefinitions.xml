<?xml version="1.0" encoding="utf-8" ?>
<expressionsConfiguration xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >

	<expressionNameSuffixStr ><![CDATA[:]]></expressionNameSuffixStr>
	<expressionParameterPrefix ><![CDATA[-]]></expressionParameterPrefix>
	<expressionParameterAssignmentStr ><![CDATA[=]]></expressionParameterAssignmentStr>
	<expressionNameRegex ><![CDATA[=]]></expressionNameRegex>
	<shortcutRegex><![CDATA[(?<shortcuts>[#shortcutsPlaceholder#]+)(\()(?<target>[^\(\)]+)\)]]></shortcutRegex>
	<nonPrintableTriggers><![CDATA[ShiftKey,ControlKey,Menu,Pause,CapsLock,Capital,Escape,Prior,PageUp,PageDown,Next,End,Home,Snapshot,PrintScreen,Insert,Delete,LWin,RWin,NumLock,LShiftKey,RShiftKey,LControlKey,RControlKey,LMenu,RMenu,Shift,Control,Alt,]]></nonPrintableTriggers>

	<expressionDefinitions>

		
		
		
		<expression name="PrintString" shortName="s" >
			<description>Outputs a string</description>
			
			<implicitParamsRegex><![CDATA[^{s:(?<text>.+?) {1}(?<count>([1-9][0-9]*)|(\{.+\}))? *}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="text" />
				<parameter name="count"/>
			</parameters>

		</expression>



		<expression name="KeyInput" shortName="k" >
			<description>Simulates Dow, Up, Press, On, Off and Toggle actions for keyboard keys</description>

			<implicitParamsRegex><![CDATA[^{(k:)? *(-key=)?(?<keycode>[A-Z0-9]+)( +(-action=)?(?<action>[-+]|[1-9][0-9]*|on|off|t|toggle|(\{.+\})+) *)?}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="keycode" />
				<parameter name="action"  />
			</parameters>

		</expression>


		<expression name="Pause" shortName="p" >
			<description>Do a pause</description>

			<implicitParamsRegex><![CDATA[^{p:(?<duration>\d+) *}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="duration" />
			</parameters>

		</expression>


		<expression name="PrintUserVar" shortName="v" >
			<description>Prints user variable value</description>

			<implicitParamsRegex><![CDATA[^{v:(?<name>.+?)}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="name" />
			</parameters>

		</expression>


		<expression name="PrintCurrentDate" shortName="d" >
			<description>Prints curent date using provided user format</description>

			<implicitParamsRegex><![CDATA[^{d:(-format=)?(?<format>.+?)}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="format"/>
			</parameters>

		</expression>


		<expression name="PrintRandomString" shortName="r" >
			<description>Prints string with random characters</description>

			<implicitParamsRegex><![CDATA[^{r:(?<params>.+?) {1}(?<count>([1-9][0-9]*)|(\{.+\}))? *}$]]></implicitParamsRegex>
			<parameters>
				<parameter name="params" />
				<parameter name="count"/>
			</parameters>

		</expression>


	</expressionDefinitions>

</expressionsConfiguration>